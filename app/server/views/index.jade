html
    head
        title
            = "Iedereen lag in een deuk"
        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")
        link(rel="manifest", href="/about/manifest.json")
        link(rel="icon", href="/favicon.ico", type="images/x-icon")
        if offline == true
            style
                include './../../../client/public/css/main_cached.css
        else
            style
                include './../../../client/public/css/main.css

    body
        div#networkStatus(class='hidden')
            svg(xmlns="http://www.w3.org/2000/svg", viewBox="0 0 24 24")
                path(d="M0 0h24v24h-24z", fill="none")
                path(d="M23.64 7c-.45-.34-4.93-4-11.64-4-1.5 0-2.89.19-4.15.48l10.33 10.32 5.46-6.8zm-6.6 8.22l-13.77-13.78-1.27 1.28 2.05 2.06c-2.14.98-3.46 2.04-3.69 2.22l11.63 14.49.01.01.01-.01 3.9-4.86 3.32 3.32 1.27-1.27-3.46-3.46z")
            
        .horizontallyCentered
            .content
                .videoContainer
                    .title
                        = "Nou, iedereen lag in een deuk"
                    video#video(autoplay)
                        source(src="/resources/vid.mp4", type="video/mp4")
                        = "Je browser is te kut man"
                    .horizontallyCentered
                        button#replayButton.fancyButton
                            = "Nog een keer"

        footer.footer
            .githubLink
                a(href="https://github.com/SanderRonde/iedereenlagineendeuk", target="_blank")
                    = "source code"
                            
    script(src='/js/main.js', async)